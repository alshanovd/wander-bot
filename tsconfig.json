{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "paths": {
      "@alert/*": ["./src/alert/*"],
      "@board/*": ["./src/board/*"],
      "@command/*": ["./src/command/*"],
      "@format/*": ["./src/command-adapter/*"],
      "@robot/*": ["./src/robot/*"],
      "@source/*": ["./src/source/*"]
    }
  }
}
